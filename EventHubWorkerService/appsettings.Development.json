{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "EventHubSettings": {
    "Namespace": "<namespace>.servicebus.windows.net",
    "EventHubName": "<hub-name>"
  },
  "RetryPolicySettings": {
    "RetryCount": 3,
    "RetryDelay": "00:00:02",
    "TimeoutDuration": "00:00:10",
    "CircuitBreakerThreshold": 0.5,
    "CircuitBreakerDuration": "00:01:00"
  }
}